# ===================================
# Git attributes for c3P repo
# ===================================

# This is the root editor config so all
# general settings would be set here
root = true

# General settings for Linux machine
[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
indent_style = tab
tab_width = 8

# Authors
[AUTHORS]
indent_style = tab
tab_width = 3

# Reduce indent at Makefile since code usually
# has not many lines at ifdef token
[Makefile]
indent_style = tab
tab_width = 2

# Json files
[*.{json,jsonc}]
indent_style = tab
tab_width = 4

# c3P source files
[*.{c3p,c3P,C3P}]
indent_style = tab
tab_width = 4

# C/C++ source files
[*.{c,h,cpp,hpp,c3p}]
indent_style = tab
tab_width = 4

# Flex/Bison source files
[*.{l,y}]
indent_style = tab
tab_width = 4

# Script files
[*.{sh,zsh,bash}]
indent_style = tab
tab_width = 4
