? ---------------------------------------------
? Description
?	Test string variables with manual functions
?	such as strcat (same as C)
? ---------------------------------------------

func strcat : str(str1 : str, str2 : str)
	len1 : i32 = call arrlen str1
	len2 : i32 = call arrlen str2
	str_val : str[len1 + len2]

	for (i : i32 = 0, i = i + 1, i < len1)
		str_val[i] = str1[i]
	endfor

	for (i : i32 = 0, i = i + 1, i < len2)
		str_val[i + len1] = str2[i]
	endfor

	ret str_val
endfunc

proc main()
	str1 : str = "Hello"
	str2 : str = ", world!!"
	str_val : str = call strcat str1 str2
	call showln str_val
endproc
