? ---------------------------------------------
? Description
?	Test routines including recursive functions
?	such as fibonacci method
? ---------------------------------------------


func equal : i32(x : i32, y : i32)

	result : i32 = 0

	if (x == y)

		result = 1

		message : c[8] = { '[', 'E', 'Q', 'U', 'A', 'L', 'S', ']' }
		for(i : i32 = -1, i = i + 1, i < 8)
			call show message[i]
		endfor

		call showln ' '

	endif

    ret result
endfunc


proc main()
	x : i32 = 5
	y : i32 = 5

	z : i32 = call equal x, y

endproc

